    <h1 id="header"> create an item </h1>
    <form id="item-form">
        <div>
            <h3>item name:</h3>
            <input type="text" placeholder="i.e. milk" id="name-input">
        </div>
        <div class="foto">
            <h3>image:</h3>
            <img src="https://picsum.photos/300/300" id="img-preview" />
            <label class="file-upload-container" for="file-upload">
                <input id="file-upload" type="file" style="display:none;">
